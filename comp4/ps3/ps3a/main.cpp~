#include <iostream> 
#include <string> 
#include <vector> 
#include <SFML/Graphics.hpp>
#include <SFML/System.hpp>
#include <SFML/Window.hpp> 
#include "space.hpp" 

using namespace std ; 
using namespace sf ; 

int main( int argc, char *argv[] ) { 

  int n, i  ; double spcrdi; vector< body* > space ; 
  cin >> n ;  cin >> spcrdi ; 

  for( i = 0 ; i < n ; i++ ) { 
    body *planet= new body( spcrdi, 900 ) ; 
    cin >> planet; 
    space.push_back( planet )  ;   
   }

  /*body earth( spcrdi, 900 ) ; 
    cin >> earth ;*/ 

  RenderWindow window( VideoMode( 900, 900), "ps3 AC" ) ; 
 
  while (window.isOpen()){
    //earth.newpos() ;  
    sf::Event event;
    while (window.pollEvent(event)) {
      if (event.type == sf::Event::Closed)
	window.close();
    }
    window.clear();
    for( i = 0 ; i < n ; i++ ) window.draw(*space[i]) ; 
    //window.draw(earth);
    window.display();
  }
  /*
  for( i = 0 ; i < n ; i++ ) { 
    body *planet= new body( spcrdi, 900 ) ; 
    cin >> planet; 
    space.pushback( planet )    
  } 
  */
  return 0 ; 
} 
